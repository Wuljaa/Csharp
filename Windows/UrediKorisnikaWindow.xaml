<Window x:Class="Filmovizija.Windows.UrediKorisnikaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Uredi korisnika" Height="320" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f5f6fa">

    <Border CornerRadius="10" BorderBrush="#dcdde1" BorderThickness="1" Padding="20" Background="White" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Uredi podatke korisnika" 
                       FontSize="18" FontWeight="Bold" Foreground="#2f3640" 
                       HorizontalAlignment="Center" Margin="0 0 0 15"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Ime:" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="ImeTextBox" Grid.Row="1" Grid.Column="1" 
                     Margin="5" Height="28" Width="220"
                     Padding="5" Background="#f0f0f0" BorderBrush="#dcdde1"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Prezime:" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="PrezimeTextBox" Grid.Row="2" Grid.Column="1" 
                     Margin="5" Height="28" Width="220"
                     Padding="5" Background="#f0f0f0" BorderBrush="#dcdde1"/>

            <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" 
                        HorizontalAlignment="Right" Margin="0 20 0 0">
                <Button Content="Potvrdi" Width="90" Height="32" Margin="5" 
                        Background="#273c75" Foreground="White" BorderBrush="#273c75"
                        Click="Potvrdi_Click"/>
                <Button Content="Odustani" Width="90" Height="32" Margin="5" 
                        Background="#e84118" Foreground="White" BorderBrush="#e84118"
                        Click="Odustani_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
