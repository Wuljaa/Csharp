<Window x:Class="Filmovizija.Windows.UrediPosudbuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Uredi posudbu" Height="380" Width="460"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f5f6fa">

    <Border CornerRadius="10" BorderBrush="#dcdde1" BorderThickness="1" Padding="20" Background="White" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Uredi podatke posudbe"
                       FontSize="18" FontWeight="Bold" Foreground="#2f3640"
                       HorizontalAlignment="Center" Margin="0 0 0 15"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Korisnik:" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="KorisnikTextBox" Grid.Row="1" Grid.Column="1"
                     Margin="5" Height="28" Width="250" IsReadOnly="True"
                     Padding="5" Background="#f0f0f0" BorderBrush="#dcdde1"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Film:" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="FilmTextBox" Grid.Row="2" Grid.Column="1"
                     Margin="5" Height="28" Width="250" IsReadOnly="True"
                     Padding="5" Background="#f0f0f0" BorderBrush="#dcdde1"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Datum posudbe:" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="DatumPosudbeTextBox" Grid.Row="3" Grid.Column="1"
                     Margin="5" Height="28" Width="250" IsReadOnly="True"
                     Padding="5" Background="#f0f0f0" BorderBrush="#dcdde1"/>

            <CheckBox x:Name="VracenoCheckBox" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                      Content="Film je vraćen" Margin="5" FontWeight="Bold"
                      Checked="VracenoCheckBox_Checked" Unchecked="VracenoCheckBox_Unchecked"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="Datum povratka:" VerticalAlignment="Center" Margin="5"/>
            <DatePicker x:Name="DatumPovratkaPicker" Grid.Row="5" Grid.Column="1"
                        Margin="5" Height="28" Width="250"/>

            <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal"
                        HorizontalAlignment="Right" Margin="0 20 0 0">
                <Button Content="Potvrdi" Width="90" Height="32" Margin="5"
                        Background="#273c75" Foreground="White" BorderBrush="#273c75"
                        Click="Potvrdi_Click"/>
                <Button Content="Odustani" Width="90" Height="32" Margin="5"
                        Background="#e84118" Foreground="White" BorderBrush="#e84118"
                        Click="Odustani_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
