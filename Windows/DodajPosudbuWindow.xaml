<Window x:Class="Filmovizija.Windows.DodajPosudbuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj posudbu" Height="320" Width="460"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f5f6fa">

    <Border CornerRadius="10" BorderBrush="#dcdde1" BorderThickness="1" Padding="20" Background="White" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Dodaj novu posudbu"
                       FontSize="18" FontWeight="Bold" Foreground="#2f3640"
                       HorizontalAlignment="Center" Margin="0 0 0 15"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Korisnik:" VerticalAlignment="Center" Margin="5"/>
            <ComboBox x:Name="KorisnikComboBox" Grid.Row="1" Grid.Column="1"
                      Margin="5" Height="28" Width="250"
                      SelectedValuePath="ID">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} {1}">
                                    <Binding Path="Ime"/>
                                    <Binding Path="Prezime"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Film:" VerticalAlignment="Center" Margin="5"/>
            <ComboBox x:Name="FilmComboBox" Grid.Row="2" Grid.Column="1"
                      Margin="5" Height="28" Width="250"
                      DisplayMemberPath="Naziv" SelectedValuePath="ID"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Datum posudbe:" VerticalAlignment="Center" Margin="5"/>
            <DatePicker x:Name="DatumPosudbePicker" Grid.Row="3" Grid.Column="1"
                        Margin="5" Height="28" Width="250"/>

            <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal"
                        HorizontalAlignment="Right" Margin="0 20 0 0">
                <Button Content="Dodaj" Width="90" Height="32" Margin="5"
                        Background="#273c75" Foreground="White" BorderBrush="#273c75"
                        Click="Dodaj_Click"/>
                <Button Content="Odustani" Width="90" Height="32" Margin="5"
                        Background="#e84118" Foreground="White" BorderBrush="#e84118"
                        Click="Odustani_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
