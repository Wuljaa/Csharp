<Window x:Class="Filmovizija.Windows.DodajFilmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj film" Height="420" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f5f6fa">

    <Border CornerRadius="10" BorderBrush="#dcdde1" BorderThickness="1" Padding="20" Background="White" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Unesi podatke o filmu"
                       FontSize="18" FontWeight="Bold" Foreground="#2f3640"
                       HorizontalAlignment="Center" Margin="0 0 0 15"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Naziv:" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="NazivTextBox" Grid.Row="1" Grid.Column="1"
                     Margin="5" Height="28" Padding="5" Background="#f0f0f0" BorderBrush="#dcdde1"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Žanr:" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="ZanrTextBox" Grid.Row="2" Grid.Column="1"
                     Margin="5" Height="28" Padding="5" Background="#f0f0f0" BorderBrush="#dcdde1"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Godina izdanja:" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="GodinaIzdanjaTextBox" Grid.Row="3" Grid.Column="1"
                     Margin="5" Height="28" Padding="5" Background="#f0f0f0" BorderBrush="#dcdde1"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Režiser:" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="ReziserTextBox" Grid.Row="4" Grid.Column="1"
                     Margin="5" Height="28" Padding="5" Background="#f0f0f0" BorderBrush="#dcdde1"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="Ocjena (0-10):" VerticalAlignment="Top" Margin="5"/>
            <TextBox x:Name="OcjenaTextBox" Grid.Row="5" Grid.Column="1"
                     Margin="5" Height="28" Padding="5" Background="#f0f0f0" BorderBrush="#dcdde1"/>

            <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal"
                        HorizontalAlignment="Right" Margin="0 20 0 0">
                <Button Content="Dodaj" Width="90" Height="32" Margin="5"
                        Background="#44bd32" Foreground="White" BorderBrush="#44bd32"
                        Click="DodajFilm_Click"/>
                <Button Content="Odustani" Width="90" Height="32" Margin="5"
                        Background="#e84118" Foreground="White" BorderBrush="#e84118"
                        Click="Odustani_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
